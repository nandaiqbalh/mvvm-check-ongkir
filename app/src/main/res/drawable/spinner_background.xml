<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/primary_500" />
                    <corners android:radius="3dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_down" android:gravity="right" />
        </layer-list>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="3dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/primary_500" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_down" android:gravity="right" />
        </layer-list>
    </item>

    <!-- Default State -->
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="3dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/black_200" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_arrow_down" android:gravity="right" />
        </layer-list>
    </item>
</selector>
