<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.CekOngkir" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="Theme.CustomAppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_500</item>
        <item name="colorOnPrimary">@color/primary_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.CekOngkir" parent="Base.Theme.CekOngkir" />

    <style name="SpinnerItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_500</item>
        <item name="color">@color/primary_500</item>

    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textViewStyle">@style/SpinnerItem</item>
        <item name="android:fontFamily">@font/jakartasans_regular</item>
    </style>

    <style name="CustomSpinner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textViewStyle">@style/SpinnerItem</item>
        <item name="android:fontFamily">@font/jakartasans_regular</item>
    </style>

</resources>